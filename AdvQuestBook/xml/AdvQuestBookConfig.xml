		<Size>
			<AbsDimension x="22" y="22" />
		</Size>
		<Layers>
			<Layer>
				<FontString name="$parentText" inherits="GameFontHighlight" text="">
					<Anchors>
						<Anchor point="LEFT" relativePoint="RIGHT">
							<Offset>
								<AbsDimension x="0" y="0" />
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
		</Layers>
		<Scripts>
			<OnClick>
				PlaySoundByPath("sound\\interface\\ui_sysmenu_click.mp3");
			</OnClick>
		</Scripts>
	</CheckButton>
