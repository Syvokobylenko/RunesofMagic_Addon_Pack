							<Offset>
								<AbsDimension x="10" y="18" />
							</Offset>
						</Anchor>
					</Anchors>
				</FontString>
			</Layer>
			<Layer>
				<FontString name="$parentDBVerText" inherits="Font_FrameTitle" text="">
