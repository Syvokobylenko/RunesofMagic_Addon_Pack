			</Anchor>
		</Anchors>
		<Layers>
			<Layer>
				<FontString name="$parentTitleText" inherits="Font_FrameTitle" text="AQB_XML_CONFIG2">
					<Anchors>
						<Anchor point="TOP">
							<Offset>
								<AbsDimension x="0" y="18" />
							</Offset>
						</Anchor>
